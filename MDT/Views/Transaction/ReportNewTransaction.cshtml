@model MDT.ViewModels.TransactionVM

@{
    ViewBag.Title = "AddNewTransaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Report a Transaction</h2>


@using (Html.BeginForm("ReportNewTransaction", "Transaction", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TransactionTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TransactionTypeId, new SelectList(ViewBag.TransactionTypes, "val", "txt"), "Select Transaction Type", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TransactionTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-sm btn-info" value="Submit" class="btn btn-default" />
                <input type="button" class="btn btn-sm btn-warning" value="Return" onclick="location.href='@Url.Action("Index", "Transaction")'" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
