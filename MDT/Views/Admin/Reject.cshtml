@using MDT.ViewModels
@model GroupVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h2>Reject Application</h2>
</div>
@using (Html.BeginForm($"Rejected", "Admin", FormMethod.Post))
{
    <div class="modal-body">
        <div class="row">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                <div class="row col-xs-10 col-xs-offset-1">
                    @Html.HiddenFor(model => model.GroupId)
    
                    @Html.TextAreaFor(model => model.TextArea, htmlAttributes: new { @class = "form-control", @rows = 5, placeholder="Reason for rejection"})
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <button type="submit" id="btnReject" class="btn btn-danger">Confirm</button>
            </div>
        </div>
    </div>
}