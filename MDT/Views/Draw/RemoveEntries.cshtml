@using MDT.ViewModels
@model RemoveEntriesVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">

    @using (Ajax.BeginForm("RemoveEntries", "Draw", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "modaldiv" }, new { id = "RemoveEntries" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.DrawId)
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.RemovedEntries, htmlAttributes: new { @class = "control-label col-xs-4" })
                <div class="col-xs-8">
                    @Html.EditorFor(model => model.RemovedEntries, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.RemovedEntries, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-8 pull-right">
                    <button type="button" class="btn btn-sm btn-danger" id="btnRemoveEntries">Remove Entries</button>
                </div>
            </div>
        </div>
    }
</div>
