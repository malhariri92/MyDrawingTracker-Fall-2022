@using MDT.ViewModels
@model EntryVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h2>Remove Entries from @Model.DrawTitle</h2>
</div>
<div class="modal-body">

    @using (Ajax.BeginForm("RemoveEntries", "Draw", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "modaldiv", OnSuccess = "hideModalSpinner", OnFailure = "showModalError" }, htmlAttributes: new { id = "ModalForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DrawId)
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.EntryCount, htmlAttributes: new { @class = "control-label col-xs-4" })
                <div class="col-xs-8">
                    @Html.EditorFor(model => model.EntryCount, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.EntryCount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-8 pull-right">
                    <button type="submit" class="btn btn-sm btn-danger" id="btnRemoveEntries">Remove Entries</button>
                </div>
            </div>
        </div>
    }
</div>
