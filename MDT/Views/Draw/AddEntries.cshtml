@model MDT.ViewModels.EntryVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h2>Get Entries for @Model.DrawTitle</h2>
</div>
@using (Ajax.BeginForm("AddEntries", "Draw", new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "modaldiv", OnSuccess = "hideModalSpinner", OnFailure = "showModalError" }, htmlAttributes: new { id = "ModalForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DrawId)
    <div class="modal-body">
        <div>
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.EntryCount, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.EditorFor(model => model.EntryCount, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.EntryCount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-xs-8 pull-right">
                <button type="submit" class="btn btn-success">Add Entries</button>
            </div>
        </div>
    </div>
}
