@using MDT.Models.DTO;
@{
    UserDTO user = (UserDTO)Session["User"];
    GroupDTO group = (GroupDTO)Session["Group"];
    bool admin = (bool?)Session["IsAdmin"] ?? false;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - My Drawing Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
    @RenderSection("head", required: false)

</head>
<body>
    <div id="Banner">
        <div class="row" id="BannerRow">
            <div id="LogoBox" class="col-xs-12 col-md-6">

            </div>
            <div id="InfoBox" class="col-xs-12 col-md-6">

                <div class="row">
                    <div class="col-xs-0 col-md-6"></div>
                    <div class="col-xs-12 col-md-6">
                        @if (user == null)
                        {
                            <h2 style="margin-top:unset;">
                                Anonymous<br />
                                Unknown
                            </h2>
                        }
                        else
                        {
                            <h2 style="margin-top:unset;">
                                @user.UserName<br />
                                @group.GroupName @(admin ? "(Admin)" : "")
                            </h2>
                        }
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-default" style="vertical-align:middle;background-color: #000;padding:10px;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (user != null)
                    {
                        <li>@Html.ActionLink("My Page", "Index", "User", null, null)</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (user == null)
                    {
                        <li>@Html.ActionLink("Sign In", "SignIn", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sign Out", "SignOut", "Home")</li>
                    }
                </ul>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
    </div>
    <footer class="text-center">
        <hr />
        <p>&copy; @DateTime.Now.Year - My Drawing Tracker</p>
    </footer>

</body>

</html>
