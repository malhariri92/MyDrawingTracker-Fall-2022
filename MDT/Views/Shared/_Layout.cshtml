@using MDT.Models;
@using MDT.Models.DTO;
@{
    UserDTO user = (UserDTO)Session["User"];
    GroupDTO group = (GroupDTO)Session["Group"];
    bool isGroupAdmin = user != null && group != null ? WebManager.IsGroupAdmin(group.GroupId, user.UserId) : false;
    bool admin = (bool?)Session["IsAdmin"] ?? false;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - My Drawing Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
    @RenderSection("head", required: false)

</head>
<body>
    <div id="Banner">
        <div class="row" id="BannerRow">
            <div id="LogoBox" class="col-xs-12 col-md-6">

            </div>
            <div id="InfoBox" class="col-xs-12 col-md-6">

                <div class="row">
                    <div class="col-xs-0 col-md-6"></div>
                    <div class="col-xs-12 col-md-6">
                        @if (user == null)
                        {
                            <h2 style="margin-top:unset;">
                                Anonymous<br />
                                Unknown
                            </h2>
                        }
                        else
                        {
                            <h2 style="margin-top:unset;">
                                @user.UserName<br />
                                @group.GroupName @(admin ? "(Admin)" : "")
                            </h2>
                        }
                    </div>
                </div>
            </div>
        </div>
        @{
            Html.RenderAction("Nav", "Home");
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
    </div>

    <div class="modal fade" id="popup" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" id="modaldiv">

            </div>
        </div>
    </div>
    <footer class="text-center">
        <hr />
        <p>&copy; @DateTime.Now.Year - My Drawing Tracker</p>
    </footer>

</body>

</html>
