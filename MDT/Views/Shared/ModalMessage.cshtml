@using MDT.ViewModels
@model ModalMessageVM
@{
    string url = (string)Session["RedirectUrl"];
    Session["RedirectUrl"] = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    @if (Model.HtmlHeader)
    {
        @Html.Raw(Model.Header)
    }
    else
    {
        <h2>@Model.Header</h2>

    }
</div>
<div class="modal-body">

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            @if (Model.HtmlBody)
            {
                @Html.Raw(Model.Body)
            }
            else
            {
                @Model.Body
            }
        </div>
    </div>
</div>

<div class="modal-footer">
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            @if (Model.HtmlFooter)
            {
                @Html.Raw(Model.Footer)
            }
            else
            {
                @Model.Footer
            }
            @if (Model.RedirectButton)
            {
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="window.top.location.href='@Model.RedirectLink'">@Model.RedirectText</button>
            }
            else
            {
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            }
        </div>
    </div>
</div>