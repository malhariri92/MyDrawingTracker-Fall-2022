<div id="popupWindow">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div  class="row modal-body">
        <div class="col-xs-10 col-xs-offset-1">
            <h2 class="text-center">Join a Group with an Access Code</h2>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger">
                    @ViewBag.Error
                </div>
            } else if (ViewBag.SuccessMessage != null) 
            {
                <div class="text-success">
                    @ViewBag.SuccessMessage
                </div>
            }
            @using (Ajax.BeginForm("JoinGroupWithCode", "User", new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "popupWindow" }, new { @id = "joinWithCodeForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.Label("Access Code")
                            <div class="col-md-10">
                                @Html.Editor("AccessCode")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Join Group" class="btn btn-success" />
                    </div>
                    <br />
                </div>
            }
        </div>
    </div>
</div>