@{
    ViewBag.Title = "Home";
    bool? UserVerified = (bool?)Session["VerifiedUser"];
    bool? GroupApproved = (bool?)Session["ApprovedGroup"];

}

@if (ViewBag.Message != null)
{
    <div class="row text-center">
        <h3 class="text-success">@ViewBag.Message</h3>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="row text-center">
        <h3 class="text-danger">@ViewBag.Error</h3>
    </div>
}

<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h1>My Drawing Tracker</h1>
            <p class="lead">Coming Soon </p>
            <p>
                Some stuff about the site

            </p>
        </div>
    </div>
</div>
@if ((UserVerified != null && !UserVerified.Value) || (GroupApproved != null && !GroupApproved.Value))
{
<div class="row">
    @if (UserVerified != null && !UserVerified.Value)
    {
        <div class="col-xs-6">
            @{
                Html.RenderPartial("UnverifiedEmail");
            }
        </div>
    }
    @if (GroupApproved != null && !GroupApproved.Value)
    {
        <div class="col-xs-6">
            @{
                Html.RenderPartial("UnverifiedGroup");
            }
        </div>
    }
</div>
}

<script type="text/javascript">
    $(document).on('click', '#btnForgotPass', function () {
        $('#modaldiv').empty();
        $('#modaldiv').append('<div class="spinnerdiv"><span class="text-primary fa fa-5x fa-spinner fa-spin center"></span></div>');
        $('#popup').modal("show");
        $('#modaldiv').load('@Url.Action("ForgotPass", "Home", null, null)');
    });
    $(document).on('click', '.btnBackToSignIn', function () {
        $('#modaldiv').empty();
        $('#modaldiv').append('<div class="spinnerdiv"><span class="text-primary fa fa-5x fa-spinner fa-spin center"></span></div>');
        $('#popup').modal("show");
        $('#modaldiv').load('@Url.Action("SignIn", "Home", null, null)');
    });
    $(document).on('click', '#btnCreateAccount', function () {
        $('#modaldiv').empty();
        $('#modaldiv').append('<div class="spinnerdiv"><span class="text-primary fa fa-5x fa-spinner fa-spin center"></span></div>');
        $('#popup').modal("show");
        $('#modaldiv').load('@Url.Action("NewUser", "Home", null, null)');
    });
    $(document).on('click', '#btnSendVerification', function () {
        $('#modaldiv').empty();
        $('#modaldiv').append('<div class="spinnerdiv"><span class="text-primary fa fa-5x fa-spinner fa-spin center"></span></div>');
        $('#popup').modal("show");
        $('#modaldiv').load('@Url.Action("SendVerification", "Home", null, null)');
    });

    $(document).on('click', '#btnSignIn', function () {
        $('#SignIn').validate();
        if ($('#SignIn').valid()) {
            $('#SignIn').submit();
            $('#modaldiv').empty();
            $('#modaldiv').append('<div class="spinnerdiv"><span class="text-primary fa fa-5x fa-spinner fa-spin center"></span></div>');
        }
    });

    $(document).on('change', '#createToggle', function () {
        if ($(this).is(':checked')) {
            $('#groupAdmin').show();
            $('#groupUser').hide();
        } else {
            $('#groupAdmin').hide();
            $('#groupUser').show();
        }
    });
</script>