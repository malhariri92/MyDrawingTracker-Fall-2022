@using MDT.Models
@model User
@{
    string url = (string)Session["RedirectUrl"];
    Session["RedirectUrl"] = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h2>Welcome back, @Model.UserName</h2>
        </div>
    </div>
</div>

<div class="modal-footer">
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            @if (string.IsNullOrEmpty(url))
            {
                <button type="button" class="btn btn-success" data-dismiss="modal" onclick="window.top.location.href='@url'">Continue</button>
            }
            else
            {
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            }

        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#Banner').load('@Url.Action("Banner", "Home", null)');
    });
</script>
